/* components/search-box/search-box.wxss */
.search-container {
  width: 100%;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  height: 88rpx;
  box-sizing: border-box;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  height: 100%;
}

.search-divider {
  width: 2rpx;
  height: 70%;
  background-color: #E5E5E5;
  margin: 0 24rpx;
}

.search-btn {
  font-size: 26rpx;
  color: #838383;
  white-space: nowrap;
}

