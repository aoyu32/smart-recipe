/* pages/recipe/recipe.wxss */
page {
  height: 100vh;
  background-color: #F5F5F5;
  overflow: hidden; /* 禁止页面整体滚动 */
}

.container {
  height: 100%;
  padding-top: env(safe-area-inset-top);
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  padding: 24rpx;
  overflow: hidden; /* 只让指定区域滚动 */
  display: flex;
  flex-direction: column;
  min-height: 0;
}

/* 目标卡片 */
.goal-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin: 20rpx 0;
  flex-shrink: 0;
}

.goal-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 18rpx 12rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid transparent;
}

.goal-card.active {
  border-color: rgba(182, 207, 153, 0.9);
  background: #f8fff4;
}

.goal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #222;
  text-align: center;
}

.goal-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #888;
  text-align: center;
}

/* 主体两栏：只允许左右两块各自滚动 */
.main {
  flex: 1;
  display: flex;
  gap: 16rpx;
  overflow: hidden;
  min-height: 0; /* 关键：让内部 scroll-view 正确占满并滚动 */
}

.category {
  width: 150rpx;
  flex-shrink: 0;
  flex-grow: 0;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 12rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  height: 100%;
  min-height: 0;
}

.cat-item {
  padding: 18rpx 14rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #444;
  margin-bottom: 10rpx;
  background: #f7f7f7;
}

.cat-item.active {
  background: #e8f7f0;
  color: #1b7f5a;
  font-weight: 600;
}

.list {
  flex: 1;
  overflow: hidden;
  height: 100%;
}

/* 右侧一行两列 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  padding-bottom: 10rpx;
}

.card {
  background: #ffffff;
  border-radius: 18rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
}

.card-img {
  width: 100%;
  height: 180rpx;
  background: #eee;
}

.card-body {
  padding: 14rpx 14rpx;
}

.card-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.card-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #222;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-cal {
  font-size: 22rpx;
  color: #666;
  flex-shrink: 0;
}

.empty {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 26rpx;
}
