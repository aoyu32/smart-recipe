}

/* 动态渐变背景 */
.generate-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, 
    #7FB069 0%, 
    #9BC184 25%, 
    #B6CF99 50%, 
    #A8D5BA 75%, 
    #7FB069 100%);
  background-size: 400% 400%;
  border-radius: 50%;
  transition: all 0.3s;
  box-shadow: 0 4rpx 20rpx rgba(182, 207, 153, 0.5);
  animation: gradient-shift 8s ease infinite;
}

/* 外层光晕 */
.generate-glow {
  position: absolute;
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(182, 207, 153, 0.5) 0%, transparent 70%);
  border-radius: 50%;
  animation: glow-pulse 2s ease-in-out infinite;
  filter: blur(10rpx);
}

/* 图标 */
.generate-icon {
  width: 36rpx;
  height: 36rpx;
  position: relative;
  z-index: 2;
  transition: all 0.3s;
  filter: brightness(0) invert(1) drop-shadow(0 0 4rpx rgba(255, 255, 255, 0.8));
  animation: icon-breathe 3s ease-in-out infinite;
}

/* 粒子容器 */
.generate-particles {
  position: absolute;
  width: 140%;
  height: 140%;
  pointer-events: none;
  left: -20%;
  top: -20%;
}

/* 粒子效果 - 更多粒子，更炫酷 */
.particle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(45deg, #fff, #B6CF99);
  box-shadow: 0 0 10rpx rgba(182, 207, 153, 0.8);
}

.particle-1 {
  width: 6rpx;
  height: 6rpx;
  top: 20%;
  left: 50%;
  animation: particle-orbit-1 4s ease-in-out infinite;
}

.particle-2 {
  width: 8rpx;
  height: 8rpx;
  top: 50%;
  right: 15%;
  animation: particle-orbit-2 5s ease-in-out infinite 0.5s;
}

.particle-3 {
  width: 6rpx;
  height: 6rpx;
  bottom: 20%;
  left: 50%;
  animation: particle-orbit-3 4.5s ease-in-out infinite 1s;
}

.particle-4 {
  width: 8rpx;
  height: 8rpx;
  top: 50%;
  left: 15%;
  animation: particle-orbit-4 5.5s ease-in-out infinite 1.5s;
}

/* 点击效果 */
.ai-generate-icon:active .generate-bg {
  transform: scale(0.9);
  box-shadow: 0 2rpx 12rpx rgba(182, 207, 153, 0.6);
}

.ai-generate-icon:active .generate-icon {
  transform: scale(0.85);
}

/* 生成中状态 */
.ai-generate-icon.generating .generate-bg {
  animation: gradient-shift 1.5s ease infinite, rotate-bg 2s linear infinite;
  box-shadow: 0 4rpx 30rpx rgba(182, 207, 153, 0.8), 
              0 0 40rpx rgba(155, 193, 132, 0.6);
}

.ai-generate-icon.generating .generate-glow {
  animation: glow-pulse-fast 0.8s ease-in-out infinite;
  opacity: 1;
}

.ai-generate-icon.generating .generate-icon {
  animation: icon-float 2s ease-in-out infinite, icon-breathe 1.5s ease-in-out infinite;
  filter: brightness(0) invert(1) drop-shadow(0 0 8rpx rgba(255, 255, 255, 1));
}

.ai-generate-icon.generating .particle {
  animation-duration: 2s !important;
}

/* 动画定义 */

/* 渐变色移动 */
@keyframes gradient-shift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* 背景旋转 */
@keyframes rotate-bg {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 光晕脉动 */
@keyframes glow-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.6;
  }
}

@keyframes glow-pulse-fast {
  0%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.3);
    opacity: 1;
  }
}

/* 图标漂浮 */
@keyframes icon-float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  25% {
    transform: translateY(-4rpx) scale(1.05);
  }
  75% {
    transform: translateY(4rpx) scale(0.95);
  }
}

/* 图标呼吸效果 */
@keyframes icon-breathe {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.15);
  }
}

/* 粒子轨道运动 */
@keyframes particle-orbit-1 {
  0%, 100% {
    transform: translate(0, 0) scale(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(0, -60rpx) scale(1.5);
    opacity: 1;
  }
  90% {
    opacity: 0;
    transform: translate(0, -80rpx) scale(0);
  }
}

@keyframes particle-orbit-2 {
  0%, 100% {
    transform: translate(0, 0) scale(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(60rpx, 0) scale(1.5);
    opacity: 1;
  }
  90% {
    opacity: 0;
    transform: translate(80rpx, 0) scale(0);
  }
}

@keyframes particle-orbit-3 {
  0%, 100% {
    transform: translate(0, 0) scale(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(0, 60rpx) scale(1.5);
    opacity: 1;
  }
  90% {
    opacity: 0;
    transform: translate(0, 80rpx) scale(0);
  }
}

@keyframes particle-orbit-4 {
  0%, 100% {
    transform: translate(0, 0) scale(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(-60rpx, 0) scale(1.5);
    opacity: 1;
  }
  90% {
    opacity: 0;
    transform: translate(-80rpx, 0) scale(0);
  }
}

