  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
  outline: none;
