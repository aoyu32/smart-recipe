/* pages/my/my.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F5F5F5;
}

.my-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  background: linear-gradient(135deg, #B6CF99 0%, #9BC184 100%);
  display: flex;
  flex-direction: column;
}

.navbar-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1;
}

.my-content {
  flex: 1;
  overflow-y: auto;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #B6CF99 0%, #9BC184 100%);
  margin: 30rpx 30rpx 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(182, 207, 153, 0.3);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin-right: 25rpx;
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.edit-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.edit-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.edit-icon {
  width: 28rpx;
  height: 28rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* BMI信息 */
.bmi-section {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 25rpx;
}

.bmi-header {
  margin-bottom: 20rpx;
}

.bmi-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.bmi-data {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bmi-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.bmi-item-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.bmi-item-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.bmi-item-status {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.bmi-item-status.normal {
  background-color: rgba(76, 175, 80, 0.3);
}

.bmi-item-status.low {
  background-color: rgba(255, 193, 7, 0.3);
}

.bmi-item-status.high {
  background-color: rgba(255, 87, 34, 0.3);
}

.bmi-divider {
  width: 2rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

/* 健康目标卡片 */
.health-goal-card {
  background-color: #FFFFFF;
  margin: 0 30rpx 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
