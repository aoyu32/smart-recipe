  align-items: center;
  margin-bottom: 25rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.card-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-target-bmi {
  font-size: 26rpx;
  color: #B6CF99;
  font-weight: 500;
}

.goal-content {
  display: flex;
  gap: 20rpx;
}

.goal-item {
