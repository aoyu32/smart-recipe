/* pages/health-profile/health-profile.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F5F5F5;
}

.health-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  background: linear-gradient(135deg, #B6CF99 0%, #9BC184 100%);
  display: flex;
  flex-direction: column;
}

.navbar-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.navbar-back {
  position: absolute;
  left: 30rpx;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1;
}

.health-content {
  flex: 1;
  overflow-y: auto;
}

/* 通用section */
.section {
  margin: 30rpx 30rpx 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-action {
  font-size: 26rpx;
  color: #B6CF99;
}

/* 空状态 */
.empty-state {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 80rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx dashed #E0E0E0;
  transition: all 0.3s;
}

.empty-state:active {
  background-color: #F8F8F8;
  border-color: #B6CF99;
}

.empty-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-state-simple {
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-text-simple {
  font-size: 26rpx;
  color: #999;
}

/* 目标卡片 */
.goal-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.goal-card:last-child {
  margin-bottom: 0;
}

.goal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.goal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.goal-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.goal-status.active {
  background-color: rgba(182, 207, 153, 0.2);
  color: #B6CF99;
}

.goal-status.completed {
  background-color: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.goal-status.cancelled {
  background-color: rgba(158, 158, 158, 0.2);
  color: #9E9E9E;
}

.goal-info {
  display: flex;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.goal-info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
  white-space: nowrap;
}

.info-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
}

.goal-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.goal-dates {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.goal-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 15rpx;
}

.goal-action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  transition: all 0.3s;
}

.goal-action-btn.cancel {
  background-color: rgba(158, 158, 158, 0.1);
  color: #9E9E9E;
}

.goal-action-btn.cancel:active {
  background-color: rgba(158, 158, 158, 0.2);
}

.goal-action-btn.complete {
  background-color: rgba(182, 207, 153, 0.2);
  color: #B6CF99;
}

.goal-action-btn.complete:active {
  background-color: rgba(182, 207, 153, 0.3);
}

.goal-result {
  font-size: 26rpx;
  color: #666;
  padding: 12rpx 20rpx;
  background-color: #F8F8F8;
  border-radius: 10rpx;
}

/* 健康状况网格 */
.health-info-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.health-info-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.info-grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.info-grid-item:nth-child(n+7) {
  grid-column: span 2;
}

.grid-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.grid-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

/* 特殊禁忌 */
.restrictions-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.restrictions-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.restriction-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #F8F8F8;
  border-radius: 15rpx;
  border-left: 6rpx solid;
}

.restriction-item.allergy {
  border-left-color: #FF5252;
}

.restriction-item.disease {
  border-left-color: #FFA726;
}

.restriction-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.restriction-type {
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.restriction-type.allergy {
  background-color: rgba(255, 82, 82, 0.15);
  color: #FF5252;
}

.restriction-type.disease {
  background-color: rgba(255, 167, 38, 0.15);
  color: #FFA726;
}

.restriction-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.restriction-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.restriction-desc {
  font-size: 24rpx;
  color: #999;
}

.restriction-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.action-btn.delete {
  background-color: rgba(255, 82, 82, 0.1);
}

.action-btn.delete:active {
  background-color: rgba(255, 82, 82, 0.2);
  transform: scale(0.95);
}

.action-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 历史目标 */
.history-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.goal-header-right {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.history-delete-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(255, 82, 82, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.history-delete-btn:active {
  background-color: rgba(255, 82, 82, 0.2);
  transform: scale(0.95);
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 640rpx;
  max-height: 80vh;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 25rpx;
}

.form-item.half {
  flex: 1;
}

.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

input.form-input {
  height: 80rpx;
  line-height: 80rpx;
}

picker .form-input {
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 24rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #F5F5F5;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  transition: all 0.3s;
}

.modal-btn.cancel {
  background-color: #F5F5F5;
  color: #666;
}

.modal-btn.cancel:active {
  background-color: #E5E5E5;
}

.modal-btn.confirm {
  background-color: #B6CF99;
  color: #FFFFFF;
}

.modal-btn.confirm:active {
  background-color: #9BC184;
}
