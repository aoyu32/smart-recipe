/* pages/login/login.wxss */
page {
  height: 100vh;
  background: linear-gradient(135deg, #E8F5E0 0%, #F5F9F2 50%, #FFFFFF 100%);
}

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 80rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  margin-top: 100rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.logo-text {
  width: 240rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.slogan {
  font-size: 26rpx;
  color: #999;
  letter-spacing: 2rpx;
}

/* 表单区域 */
.form-section {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 32rpx;
}

.input-wrapper {
  position: relative;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(182, 207, 153, 0.1);
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  height: 96rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input.with-icon {
  padding: 0;
}

.form-input.with-clear {
  padding-right: 80rpx;
}

.form-input.with-toggle {
  padding-right: 80rpx;
}

.input-placeholder {
  color: #BDBDBD;
}

.clear-btn {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
}

.password-toggle {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toggle-icon {
  width: 40rpx;
  height: 40rpx;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 48rpx;
}

.forgot-password {
  padding: 8rpx 0;
}

.forgot-password text {
  font-size: 26rpx;
  color: #999;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #B6CF99 0%, #9BC184 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(182, 207, 153, 0.3);
  margin-bottom: 32rpx;
}

.submit-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.register-link {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.link-text {
  font-size: 28rpx;
  color: #999;
}

.link-action {
  font-size: 28rpx;
  color: #B6CF99;
  font-weight: 600;
}
